<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activityAccesibilidad">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightblue"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Ajustes Accesibilidad"
        app:titleMarginStart="100dp"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Large"
        app:titleTextColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Color de fondo"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnNoche"
        android:layout_width="350dp"
        android:layout_height="89dp"
        android:backgroundTint="@color/lightblue"
        android:text="Noche"
        android:textSize="24sp"
        android:translationX="30dp" />

    <Button
        android:id="@+id/btnDia"
        android:layout_width="350dp"
        android:layout_height="89dp"
        android:backgroundTint="@color/lightblue"
        android:text="Día"
        android:textSize="24sp"
        android:translationX="30dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tamaño de letra"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnAumentar"
        android:layout_width="350dp"
        android:layout_height="89dp"
        android:backgroundTint="@color/lightblue"
        android:text="Aumentar tamaño"
        android:textSize="24sp"
        android:translationX="30dp" />

    <Button
        android:id="@+id/btnReducir"
        android:layout_width="350dp"
        android:layout_height="89dp"
        android:backgroundTint="@color/lightblue"
        android:text="Reducir tamaño"
        android:textSize="24sp"
        android:translationX="30dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensiblidad Agitación"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="350dp"
        android:layout_height="89dp"
        android:spinnerMode="dropdown"
        android:translationX="30dp" />

    <Button
        android:id="@+id/button9"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:onClick="paginaMenuPrincipal"
        android:text="Volver"
        android:textSize="24sp" />
</LinearLayout>