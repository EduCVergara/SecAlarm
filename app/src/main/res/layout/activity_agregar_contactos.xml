<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".agregarContactos">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightBlue"
        android:minHeight="70dp"
        android:theme="@style/Theme.MyApplication"
        app:title="Agregar Contacto"
        app:titleMarginStart="65dp"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Display1"
        app:titleTextColor="@color/white" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre contacto"
        android:textSize="24sp"
        android:translationX="10dp" />

    <EditText
        android:id="@+id/nombreContacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Miguel Gomez BolaÃ±os"
        android:inputType="text"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fono contacto"
        android:textSize="24sp"
        android:translationX="10dp" />

    <EditText
        android:id="@+id/numeroContacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="+56912345678"
        android:inputType="phone"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnAgregarContacto"
        android:layout_width="350dp"
        android:layout_height="89dp"
        android:backgroundTint="@color/lightBlue"
        android:onClick="mostrarmensaje"
        android:text="Agregar contacto"
        android:textSize="24sp"
        android:translationX="30dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:onClick="ajusteContactos"
        android:text="Regresar"
        android:textSize="24sp" />
</LinearLayout>