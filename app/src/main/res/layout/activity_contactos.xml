<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".contactos">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightblue"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="center"
        android:theme="?attr/actionBarTheme"
        app:title="Ajustes de Contacto"
        app:titleMarginStart="65dp"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Display1"
        app:titleTextColor="@color/white" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contacto Favorito"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="34sp" />

    <Button
        android:id="@+id/btnAgregarFav"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:backgroundTint="@color/lightblue"
        android:onClick="agregarFavoritoPage"
        android:text="Agregar Favorito"
        android:textSize="24sp"
        app:iconPadding="0dp" />

    <Button
        android:id="@+id/btnActualizarFav"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:backgroundTint="@color/lightblue"
        android:onClick="editarFavoritoPage"
        android:text="Actualizar Favorito"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contactos Emergencia"
        android:textAlignment="center"
        android:textSize="34sp" />

    <Button
        android:id="@+id/btnAgregarContactos"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:backgroundTint="@color/lightblue"
        android:onClick="agregarContactosPage"
        android:text="Agregar Contacto"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnVerContactos"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:backgroundTint="@color/lightblue"
        android:onClick="listaContactosPage"
        android:text="Ver Contactos"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="54dp" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:onClick="menuPrincipal"
        android:text="Regresar"
        android:textSize="24sp" />

</LinearLayout>